<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="author" content="Edijs Kalnins" />
	<meta name="group" content="310" />
	<meta name="group_name" content="VEMEM" />
	<meta name="date_created" content="13.09.2023" />
	<meta name="date_modify" content="14.09.2023" />

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
	<title>
		<%=title %>
	</title>
</head>

<body>
	<%- include("../partials/navbar.ejs") %>

		<div class="container mt-3">
			<button class="btn btn-outline-primary">Edit</button>

			<form class="delete-prod-form">
				<input type="hidden" name="id" value=<%=prod.id %>>
				<button class="btn btn-outline-danger">Delete</button>
			</form>



			<div class="row row-cols-1 row-cols-lg-2">

				<div class="col">
					<h1>
						<%= prod.name %>
					</h1>

					<hr class="divider">

					<p>Serial number: <%= prod.serial_num %>
					</p>
					<p>Barcode: <%= prod.barcode %>
					</p>
					<p>Type: <%= prod.type %>
					</p>
					<p>Creator: <%= prod.user %>
					</p>

					<hr class="divider">

					<p>Quantity: <%= prod.quantity %>
					</p>
					<h4>Cost: <span class="cost">
							<%= prod.cost %>$
						</span></h4>

					<hr class="divider">




					<form action="/export/product/" method="post">
						<legend>Export Product</legend>
						<div class="mb-3">
							<label for="quantity" class="form-label">Write quantity which you want export:</label>
							<input type="number" id="quantity" class="form-control" name="quantity"
								placeholder="Enter quantity">
						</div>

						<div class="mb-3">
							<label for="object" class="form-label">Where exported to(Object name):</label>
							<input type="text" id="object" class="form-control" name="object" placeholder="Enter object name">
						</div>

						<div class="mb-3">
							<label for="date" class="form-label">Date export:</label>
							<input type="date" id="date" class="form-control" name="date" placeholder="Enter date">
						</div>

						<input type="hidden" name="prod_id" value="<%= prod.id %>">

						<input class="btn btn-outline-success" type="submit" value="Export product">
					</form>

				</div>

				<div class="col">
					<div class="container mt-3">
						<h2>Exported Products</h2>

						<table class="table table-striped">
							<thead>
								<tr>
									<th>Name</th>
									<th>Exporter</th>
									<th>Quantity</th>
									<th>Object</th>
									<th>Date</th>
								</tr>
							</thead>
							<tbody>
								<% exported_products.forEach(element=> { %>
									<tr>
										<th>
											<%=element.name%>
										</th>
										<th>
											<%=element.exporter%>
										</th>
										<th>
											<%=element.quantity%>
										</th>
										<th>
											<%=element.object%>
										</th>
										<th>
											<%=element.removedate%>
										</th>
									</tr>
									<%}) %>
							</tbody>
						</table>
					</div>


					<div class="container mt-3">
						<h2>Imported Products</h2>

						<table class="table table-striped">
							<thead>
								<tr>
									<th>Name</th>
									<th>Importer</th>
									<th>Quantity</th>
									<th>Date</th>
								</tr>
							</thead>
							<tbody>
								<% imported_products.forEach(element=> { %>
									<tr>
										<th>
											<%=element.name%>
										</th>
										<th>
											<%=element.importer%>
										</th>
										<th>
											<%=element.quantity%>
										</th>
										<th>
											<%=element.deliverydate%>
										</th>
									</tr>
									<%}) %>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

		<%- include("../partials/footer.ejs") %>
</body>
<script src="/scripts/prodDelete.js"></script>
</html>