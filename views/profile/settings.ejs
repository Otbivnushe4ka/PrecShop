  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
</head>

<body >
  <%- include("../partials/navbar.ejs") %>

    <div class="container-fluid col-10">
      <h1 class="text-center">Settings</h1>
      <hr class="divider" />
      <form action="/settings" method="POST" id="form">




        <h1>Change your info</h1>
        <!-- User Name -->
        <div class="row mb-3 row-cols-1 row-cols-lg-2">
          <div class="col">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name" value="<%=user.name%>" />
          </div>



          <!-- User Last Name -->
          <div class="col">
            <label for="name">Last Name:</label>
            <input type="text" class="form-control" name="lastname" value="<%=user.lastname%>" />
          </div>
        </div>

        <div class="row mb-3 row-cols-1 row-cols-lg-2">
          <!-- User Email -->
          <div class="col">
            <label for="email">Email:</label>
            <input type="text" class="form-control" name="email" value="<%=user.email%>" />
          </div>


          <!-- User Password -->
          <div class="col ">
            <label for="name">Password:</label>
            <div class="input-group">
              <input type="password" class="form-control" name="password" id="password" value="<%=user.password%>" />
              <input type="button" class="btn btn-outline-secondary" name="showpass" value="Show Password">
            </div>
          </div>
        </div>
        <!-- Submit -->
        <div class="text-center">
          <br>
          <button type="submit" class="btn btn-primary text" style="width: 200px">Submit</button>
        </div>
      </form>
    </div>
    <%- include("../partials/footer.ejs") %>
</body>
<script src="scripts/showpassword.js"></script>

</html>