  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

  <title>
    <%=title %>
  </title>
</head>



<body>
  <%- include("partials/navbar.ejs") %>

    <div class="container mt-3">
      <form action="/create/product" method="POST">

        <!-- Product Name -->
        <div class="mb-3 mt-3">
          <label for="prod_name">Product Name:</label>
          <input type="text" class="form-control" id="prod_name" placeholder="Enter product name" name="prod_name" />
        </div>


        <!-- Type -->
        <div class="mb-3 mt-3">
          <label for="prod_name">Product Name:</label>
          <select class="form-select" id="prod_type" name="prod_type">
            <option value="" disabled selected>Choose your option</option>
          </select>
        </div>


        <!-- Serial Num -->
        <div class="mb-3">
          <label for="serial_num">Serial Number:</label>
          <input type="text" class="form-control" id="serial_num" placeholder="Enter Serial Number" name="serial_num" />
        </div>


        <!-- Import date -->
        <div class="mb-3">
          <label for="import_date">Import Date:</label>
          <input type="date" class="form-control" id="import_date" placeholder="Enter import date" name="import_date" />
        </div>


        <!-- Deliverer -->
        <div class="mb-3">
          <label for="deliverer">Deliverer name:</label>
          <input type="text" class="form-control" id="deliverer" placeholder="Enter Deliverer name" name="deliverer" />
        </div>


        <!-- Price and Quantity -->
        <div class="row mb-3">

          <!-- Quantity -->
          <div class="col">
            <label for="quantity">Quantity:</label>
            <input type="text" id="quantity" class="form-control" placeholder="Enter Quantity" name="quantity" />
          </div>


          <!-- Price -->
          <div class="col">
            <label for="price">Price:</label>
            <input type="text" id="price" class="form-control" placeholder="Enter Price" name="price" />
          </div>


        </div>
        </br>

        <!-- Submit -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary text" style="width: 200px">Submit</button>
        </div>

      </form>
    </div>


    <%- include("partials/footer.ejs") %>
</body>

</html>