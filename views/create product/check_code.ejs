    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <title><%=title %></title>
  </head>

  <body>
    <%- include("../partials/navbar.ejs") %>

    <div class="container mt-3 col-4">
      <h1><%=title %></h1>
      <form action="/check/code" method="POST">
        <!-- Product code -->
        <div class="mb-3 mt-3">
          <label for="prod_code">Product code:</label>
          <input
            type="text"
            class="form-control"
            id="prod_code"
            placeholder="Enter product code"
            name="prod_code"
            maxlength="8"
            minlength="8"
            required
          />
        </div>

        <!-- Submit -->
        <div class="text-center">
          <button
            type="submit"
            class="btn btn-primary text"
            style="width: 200px"
          >
            Submit
          </button>
        </div>
      </form>
    </div>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
